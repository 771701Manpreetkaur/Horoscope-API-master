                        <TextView
                            android:id="@+id/tv_Libra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_Libra"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="4dp"
                            android:text="Libra"
